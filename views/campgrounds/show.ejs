<% layout('./layouts/boilerplate') %>

    <h1><%= campground.title %></h1>
    <h2><%= campground.location %></h2>
    <img src="<%= campground.image %>">
    <p> <%= campground.description %></p>
    
    <p>
        <a href="/campground">View all Campground</a>
        <a href="/campground/<%= campground.id %>/edit">Edit Campground</a>
    </p>
    
    
    <form action="/campground/<%= campground.id %>?_method=DELETE" method="POST">
        <button class="btn btn-warning">Delete this campground</button>
    </form>
